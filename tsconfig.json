{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    // 절대경로 설정
    "baseUrl": "./" ,
    "paths": {
      "@assets/*": ["assets/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@screens/*": ["src/screens/*"]
    }
  },
  "include": [
    "__tests__",
    "@types",
    "assets",
    "src",
    ".eslintrc.js",
    "babel.config.js",
    "index.js",
    "metro.config.js",
    "react-native.config.js",
  ],
  "exclude": ["node_modules", "metro.config.js", "jest.config.js"]
}
